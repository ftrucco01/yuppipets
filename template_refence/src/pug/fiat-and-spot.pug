---
title: BitCloud
classHeader: header_wide registered
footer: true
classWallet: active
---
extends layouts/layout
block content
	.wallet
		.wallet__sidebar
			.wallet__group
				.wallet__top
					.wallet__color(style="background-color: #FFD166;")
					| Fiat and Spot
				.wallet__menu
					a.wallet__link(href="wallet-overview.html")
						.wallet__color(style="background-color: #23262F;")
						| Overview
					a.wallet__link(href="wallet-margin.html")
						.wallet__color(style="background-color: #9757D7;")
						| Margin
					a.wallet__link.wallet__link_separator.active(href="fiat-and-spot.html")
						.wallet__color(style="background-color: #FFD166;")
						| Fiat and Spot
					a.wallet__link.js-popup-open(href="#popup-transfer" data-effect="mfp-zoom-in")
						+i('arrow-next')
						| Transfer
					a.wallet__link(href="buy-crypto.html")
						+i('wallet')
						| Buy with Fiat
					a.wallet__link(href="sell-crypto.html")
						+i('sell')
						| Sell for Fitat
			.wallet__btns
				a.button.button-small.wallet__button(href="deposit-fiat.html") Deposit
				a.button-stroke.button-small.wallet__button.js-popup-open(href="#popup-withdraw" data-effect="mfp-zoom-in") Withdraw
				a.button-stroke.button-small.wallet__button.js-popup-open(href="#popup-transfer" data-effect="mfp-zoom-in") Transfer
		.wallet__wrapper
			.margin
				h4.margin__title.h4 Fiat and Spot
				.margin__group
					.margin__element
						.margin__info Fiat and Spot balance
						.margin__currency
							.margin__number 0.27894652
							.category-green.margin__category BTC
						.margin__price $10,098.36
					.margin__element
						.margin__info Spot balance
						.margin__currency
							.margin__number 0.13894652
							.category-green.margin__category BTC
						.margin__price $10,098.36
					.margin__element
						.margin__info Fiat balance
						.margin__currency
							.margin__number 0.18564652
							.category-green.margin__category BTC
						.margin__price $10,098.36
					.margin__element
						.margin__info Yesterday's PNL
						.margin__currency
							.margin__number 0.00000000
							.category-green.margin__category BTC
						.margin__price $10,098.36
			.wallet__list
				.wallet__item
					.wallet__head Funds
					.wallet__body
						.balances
							.balances__line
								+subscription("text", "search", "Search coin", "search")
								a.balances__link(href=".html") Borrowing history
									+i('arrow-right')
							.balances__list
								.balances__row
									.balances__col Asset
									.balances__col Total balance
									.balances__col Available balance
									.balances__col Interest
								mixin item(icon, info, text)
									.balances__item
										.balances__row
											.balances__col
												.balances__currency
													.balances__icon
														img(src=icon alt="Currency")
													.balances__details
														.balances__info=info
														.balances__text=text
											.balances__col
												.balances__info 0.2785689852 BTC
												.balances__text $10,098.36
											.balances__col
												.balances__info 0.2785689852 BTC
												.balances__text $10,098.36
											.balances__col
												.balances__info 0.2785689852 BTC
												.balances__text $10,098.36
										.balances__btns
											a.button-stroke.button-small.balances__button(href="buy-crypto.html") Buy
											a.button-stroke.button-small.balances__button(href="deposit-fiat.html") Deposit
											a.button-stroke.button-small.balances__button.js-popup-open(href="#popup-withdraw" data-effect="mfp-zoom-in") Withdraw
											a.button-stroke.button-small.balances__button(href="exchange.html") Trade
								+item("img/content/currency/bitcoin.svg", "USDT", "Tether USD")
								+item("img/content/currency/ethereum.svg", "ETH", "Ethereum")
								+item("img/content/currency/tether.svg", "USDT", "Tether USD")
								+item("img/content/currency/bnb.svg", "BNB", "BNB")
								+item("img/content/currency/ripple.svg", "XRP", "Ripple")
								+item("img/content/currency/tron.svg", "TRX", "TRON")
								+item("img/content/currency/chainlink.svg", "LINK", "LINK")
								+item("img/content/currency/eos.svg", "EOS", "EOS.IO")
