---
title: BitCloud
---
extends layouts/layout
block content
	.profile
		.profile__head
			.profile__center.center
				h2.profile__title.h2 2FA
				.breadcrumbs
					.breadcrumbs__item
						a.breadcrumbs__link(href="index.html") Home
					.breadcrumbs__item 2FA
		.profile__body
			.profile__center.center
				.profile__sidebar
					.profile__dropdown
						.profile__top
							+i('barcode')
							| 2FA
						.profile__menu
							a.profile__link(href="profile-info.html")
								+i('user')
								| Profile
							a.profile__link(href="referrals.html")
								+i('share')
								| Referrals
							a.profile__link.profile__link_separator(href="api-keys.html")
								+i('keyboard')
								| API keys
							a.profile__link(href="sessions-and-login-history.html")
								+i('laptop')
								| Sessions & login history
							a.profile__link.active(href="2fa.html")
								+i('barcode')
								| 2FA
							a.profile__link(href="change-password.html")
								+i('lock')
								| Change password
				.profile__wrapper
					.security
						.security__enabled
							.security__title.h3 2FA <span>Enabled</span>
							.security__text If you want to turn off 2FA, input your account password and the six-digit code provided by the Google Authenticator app below, then click "<span>Disable 2FA</span>".
							.security__subtitle Disable 2FA
							.security__info Enter your password and the six-digit code provided by the Google Authenticator app to Disable the 2FA verification
							.security__email
								+i('email')
								| schinner@ui8.net
							.security__form
								.security__row
									.field.field_view
										.field__label password
										.field__wrap
											input.field__input(type="password" name="password" placeholder="Password" required)
											button.field__view
												+i('eye')
									.field
										.field__label 2FA code
										.field__wrap
											input.field__input(type="text" name="code" required)
								button.button-red.security__button Disable 2FA
						.security__disabled
							.security__title.h3 2FA <span>Disabled</span>
							.security__text If you want to turn on 2FA, input your account password and the six-digit code provided by the Google Authenticator app below, then click "<span>Enable 2FA</span>".
							.security__subtitle Enable 2FA
							.security__info Enter your password and scan SQ code by the Google Authenticator app to Enable the 2FA verification
							.security__email
								+i('email')
								| schinner@ui8.net
							.security__form
								.field.field_view
									.field__label password
									.field__wrap
										input.field__input(type="password" name="password" placeholder="Password" required)
										button.field__view
											+i('eye')
								.security__box
									.security__details
										.security__code
											img(src="img/content/qr-code.jpg" alt="Qr code")
										button.button-stroke.security__button Download app
							.security__btns
								button.button-green.security__button Enable 2FA
						